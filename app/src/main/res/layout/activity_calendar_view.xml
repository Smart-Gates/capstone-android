<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:id="@+id/calendar"
    android:background="#38889c"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:onClick="set"
        android:id="@+id/header"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#236175"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="ADD EVENT"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textSize="19dp"

            >
        </TextView>
    </RelativeLayout>


    <CalendarView
        android:id="@+id/cal"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"

        android:background="#38889c"
        android:unfocusedMonthDateColor="@android:color/white"
        android:focusedMonthDateColor="@android:color/white"
        android:weekNumberColor="@android:color/white" />

    <ScrollView
        android:layout_width="fill_parent"
        android:id="@+id/scrolli"
        android:background="#339999"
        android:layout_below="@+id/cal"
        android:layout_height="wrap_content"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linear"
            android:background="@android:color/transparent"

            android:orientation="vertical"
            android:layout_height="400dp">
            <RelativeLayout
                android:layout_width="match_parent"

                android:clickable="true"
                android:onClick="title"


                android:layout_height="52dp">
                <ImageView
                    android:id="@+id/title_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/ic_title"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/title_icon"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <EditText
                        android:id="@+id/title_txt"
                        android:layout_width="match_parent"

                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="16dp"
                        android:gravity="top|left"
                        android:hint="TITLE"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:minLines="5"
                        android:scrollHorizontally="true"
                        android:textColor="@android:color/white"
                        android:textColorHint="#99FF"
                        android:textSize="20dp" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="title"
                android:id="@+id/desc_rel"


                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/desc_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_description" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/desc_icon"
                    android:weightSum="2"


                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/txtItem"

                        android:hint="Add Description"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:lines="5"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:textColor="@android:color/white"
                        android:scrollHorizontally="true"
                        android:textColorHint="#99FF"
                        android:inputType="textMultiLine"
                        android:layout_marginRight="16dp"
                        android:layout_height="40dp"/>


                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="title"
                android:id="@+id/loc_rel"


                android:layout_height="52dp">
                <ImageView
                    android:id="@+id/loc_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_location"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/loc_icon"
                    android:weightSum="2"


                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/location"

                        android:hint="Location"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:lines="5"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:textColor="@android:color/white"
                        android:scrollHorizontally="true"
                        android:textColorHint="#99FF"
                        android:inputType="textMultiLine"
                        android:layout_marginRight="16dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="title"
                android:id="@+id/att_rel"


                android:layout_height="52dp">
                <ImageView
                    android:id="@+id/att_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_people"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/att_icon"
                    android:weightSum="2"


                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/attendee"

                        android:hint="Attendees"
                        android:layout_marginTop="20dp"
                        android:textSize="20dp"
                        android:lines="5"
                        android:minLines="5"
                        android:gravity="top|left"
                        android:textColor="@android:color/white"
                        android:scrollHorizontally="true"
                        android:textColorHint="#99FF"                        android:inputType="textMultiLine"
                        android:layout_marginRight="16dp"
                        android:layout_height="40dp"/>
                </LinearLayout>
            </RelativeLayout>







            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="setDate"
                android:id="@+id/datei"


                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/date_iconi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_date"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/date_iconi"
                    android:weightSum="2"

                    android:layout_marginRight="5dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date_texti"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DATE" />
                    <TextView
                        android:id="@+id/selectdate"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#99FF"
                        android:layout_weight="1"
                        android:hint="YY-MM-DD" />



                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="setTime"
                android:id="@+id/start_time"


                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/start_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_time"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/start_icon"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/starttime_text"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="START TIME" />
                    <TextView
                        android:id="@+id/select-stime"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#99FF"
                        android:layout_weight="1"
                        android:hint="HH:MM" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="setTime"
                android:id="@+id/end_timei"

                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/time_iconi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="32dp"
                    android:src="@drawable/ic_timelapse"
                    android:layout_centerVertical="true" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/time_iconi"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/endtime_text"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:text="END TIME" />
                    <TextView
                        android:id="@+id/select-etime"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="150dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="#99FF"
                        android:layout_weight="1"
                        android:hint="HH:MM" />



                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@+id/linear"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="11.1dp"
                android:id="@+id/ll1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:backgroundTint="#236175"
                    android:textColor="@color/cardview_light_background"
                    android:layout_weight="1"
                    android:id="@+id/btnCancel"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD"
                    android:backgroundTint="#236175"
                    android:textColor="@color/cardview_light_background"
                    android:layout_weight="1"
                    android:id="@+id/btnAdd"/>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>
</RelativeLayout>
