<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/fragment_home"
        android:background="#38889c"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/weather_panel"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_margin="5dp"
                    android:background="#236175"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#10303C"
                        android:id="@+id/weather_bar"

                        >
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_weather"
                            android:background="@android:color/transparent"
                            >
                        </Button>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="WEATHER"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"

                            >
                        </TextView>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/weather_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/weather_bar"
                        >
                        <TextView
                            android:id="@+id/weather_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textSize="12dp"
                            android:text="CURRENT"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/weather_conditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textSize="18dp"
                            android:text="Rainy"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_below="@+id/weather_current"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/weather_temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:textSize="16dp"
                            android:text="7 &#176;C"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:layout_below="@+id/weather_conditions"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/weather_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_below="@+id/weather_temperature"
                            android:textSize="12dp"
                            android:text="HUMIDITY 76%"
                            android:textColor="#FFF"
                            >
                        </TextView>

                        <TextView
                            android:id="@+id/weather_ultraviolet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_below="@+id/weather_humidity"
                            android:textSize="12dp"
                            android:text="UV INDEX: None"
                            android:textColor="#FFF"
                            >
                        </TextView>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/weather_bar"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="150dp"
                        android:layout_toRightOf="@id/weather_info"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#FFF"
                            app:srcCompat="@drawable/humidity"/>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#236175"
                    android:id="@+id/events_panel"
                    android:layout_below="@+id/weather_panel"


                    >
                    <RelativeLayout
                        android:id="@+id/events_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#10303C"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="EVENTS"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"

                            >

                        </TextView>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/btn_reminder"
                            android:background="@android:color/transparent">
                        </Button>

                    </RelativeLayout>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/events_bar"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <RelativeLayout
                                android:id="@+id/events_m1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                >

                                <TextView
                                    android:id="@+id/events_daynum_m1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:text="18"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_month_m1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/events_daynum_m1"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="#000"
                                    android:text="OCT"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/meeting_title_m1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m1"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/events_description_m1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m1"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/meeting_title_m1"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/events_m2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                android:layout_below="@id/events_m1"
                                >

                                <TextView
                                    android:id="@+id/events_daynum_m2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:text="18"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_month_m2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/events_daynum_m2"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="#000"
                                    android:text="OCT"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_title_m2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m2"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/events_description_m2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m2"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/events_title_m2"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/events_m3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                android:layout_below="@id/events_m2"
                                >

                                <TextView
                                    android:id="@+id/events_daynum_m3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:text="18"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_month_m3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/events_daynum_m3"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="#000"
                                    android:text="OCT"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_title_m3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m3"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/events_description_m3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m3"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/events_title_m3"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/events_m4"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                android:layout_below="@id/events_m3"
                                >

                                <TextView
                                    android:id="@+id/events_daynum_m4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textStyle="bold"
                                    android:textSize="25dp"
                                    android:textColor="#000"
                                    android:text="18"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_month_m4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/events_daynum_m4"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:textColor="#000"
                                    android:text="OCT"
                                    >
                                </TextView>

                                <TextView
                                    android:id="@+id/events_title_m4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m4"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/events_description_m4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/events_daynum_m4"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/events_title_m4"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>
                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#236175"
                    android:id="@+id/reminders_panel"
                    android:layout_below="@+id/events_panel"


                    >
                    <RelativeLayout
                        android:id="@+id/reminders_bar"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#10303C"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="REMINDERS"
                            android:textColor="#FFF"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:paddingTop="4dp"

                            >
                        </TextView>
                    </RelativeLayout>

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/reminders_bar"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <RelativeLayout
                                android:id="@+id/reminders_r1"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                >

                                <TextView
                                    android:id="@+id/reminders_title_r1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/reminders_description_r1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/reminders_title_r1"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/reminders_r2"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/reminders_r1"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                >

                                <TextView
                                    android:id="@+id/reminders_title_r2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/reminders_description_r2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/reminders_title_r2"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/reminders_r3"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/reminders_r2"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                >

                                <TextView
                                    android:id="@+id/reminders_title_r3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/reminders_description_r3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/reminders_title_r3"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/reminders_r4"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@id/reminders_r3"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="#FFF"
                                >

                                <TextView
                                    android:id="@+id/reminders_title_r4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textStyle="bold"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="UI Design Meeting w/ John Smith"
                                    >

                                </TextView>

                                <TextView
                                    android:id="@+id/reminders_description_r4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@id/reminders_title_r4"
                                    android:textSize="13dp"
                                    android:textColor="#000"
                                    android:text="9 a.m. in Conference Room B"
                                    >

                                </TextView>
                            </RelativeLayout>

                        </RelativeLayout>

                    </androidx.core.widget.NestedScrollView>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>